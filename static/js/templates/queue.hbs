<div class="row" id="current-queue">
  <div class="col-md-12">
    <h3>Current queue <small>Grayed out songs have been played</small></h3>
    <table class="table">
      <thead>
        <tr>
          <th>Position</th>
          <th>Artist</th>
          <th>Album</th>
          <th>Title</th>
          <th>Length</th>
          <th>Filename</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
      {{#each}}
        <tr {{bind-attr class=":playlist-song played:active played:text-muted"}}>
          <td>{{pos}}</td>
          <td>{{song.artist.name}}</td>
          <td>{{song.album.name}}</td>
          <td>{{song.name}}</td>
          <td>{{song.length}}</td>
          <td>{{song.uri}}</td>
          <td>
            <button {{action "dequeue_song" this}} class="close" type="button">
              <span aria-hidden="true">&times;</span>
              <span class="sr-only">Close</span>
            </button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
